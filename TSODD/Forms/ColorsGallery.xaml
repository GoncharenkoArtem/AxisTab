<Window x:Class="TSODD.forms.ColorsGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSODD.forms"
        mc:Ignorable="d"
        Title="Палитра цветов" MinHeight="530" MaxHeight="530"  MinWidth="440" MaxWidth="440" ResizeMode="NoResize">
    <Grid>

        <StackPanel Orientation="Vertical">
        <ListView x:Name="lv_Colors" 
                  SelectionMode="Extended"
                  Height="450"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  SelectionChanged="lv_Colors_SelectionChanged">

            <!-- GridView с одной колонкой для плиток -->
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="500">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <Border Width="20" Height="20" Margin="2" CornerRadius="3"
                                         BorderBrush="Gray" BorderThickness="2"
                                         ToolTip="{Binding Name}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Color_1}" />
                                        </Border.Background>

                                    </Border>
                                    <TextBlock Text="{Binding Index}" 
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <!-- Панель элементов как WrapPanel для плиточного расположения -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" 
                               ItemWidth="40"
                               ItemHeight="40"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="tb_Text" VerticalAlignment="Center" Margin="0,0,10,0"></TextBlock>
                <Button Content="Выбрать" Width="100" Height="22" Margin="0,10,10,10" HorizontalAlignment="Right" Click="ButtonAdd_Click"></Button>
                <Button Content="Закрыть" Width="100" Height="22" Margin="0,0,10,0" HorizontalAlignment="Right" Click="ButtonExit_Click"></Button>
         </StackPanel>
            
        </StackPanel>

    </Grid>
</Window>
