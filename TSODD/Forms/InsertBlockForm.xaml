<Window x:Class="TSODD.Forms.InsertBlockForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSODD.Forms"
        mc:Ignorable="d"
        Title="Вставка блока" Height="550" Width="730" ResizeMode="NoResize" >
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" ></ColumnDefinition>
            <ColumnDefinition Width="500" ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Grid.Row="0">
            <TextBlock Text="Тип элементов:" VerticalAlignment="Center" ></TextBlock>
            <ComboBox x:Name="cb_TypeOfElements" Height="22" Width="100" Margin="10,0,0,0" HorizontalContentAlignment="Center" SelectionChanged="cb_TypeOfElements_SelectionChanged">
                <TextBlock Text="стойки"></TextBlock>
                <TextBlock Text="знаки"></TextBlock>
                <TextBlock Text="разметка"></TextBlock>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1">
           <Label x:Name="lb_Groups" Content="Группа:" Margin="5,0,0,0"></Label>

            <ListView   x:Name="lv_Groups"
                        Width="200" Height="auto"
                        SelectionChanged="lv_Groups_SelectionChanged"
                        >
                <ListView.ItemTemplate>
                    <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}"></TextBlock>
                    </Grid>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <ListView x:Name="lv_Blocks"
                  Grid.Row="0"
                  Grid.Column="1"
                  Grid.RowSpan="2"
                  SelectionMode="Extended"
                  Height="500"
                  Width="480"
                  Margin="5,0,0,0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  MouseDoubleClick="lv_Blocks_MouseDoubleClick"
                  BorderBrush="Transparent">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="90" Height="100">
                        <!-- Основное содержимое -->
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="{Binding BMPsource}" 
                                   Width="80" Height="80"
                                   HorizontalAlignment="Center"
                                   />
                            <TextBlock Text="{Binding Name}" 
                                   HorizontalAlignment="Center"
                                   FontSize="12"/>
                        </StackPanel>

                        <!-- Кнопка удалить -->
                        <Button Width="18" Height="18" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0,0,5,0"
                                Panel.ZIndex="1"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="Button_DeleteBlock_Click">
                            <Image Width="10" Height="10"
                                Source="pack://application:,,,/TSODD;component/images/delete.png"/>
                        </Button>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" 
                           ItemWidth="100"
                           ItemHeight="100"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            
        </ListView>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Вставить"  Width="100" Height="22" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Button_Add_Click" ></Button>
            <Button Content="Выход"  Width="100" Height="22" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,15,0" Click="Button_Exit_Click" ></Button>
        </StackPanel>





    </Grid>
</Window>
