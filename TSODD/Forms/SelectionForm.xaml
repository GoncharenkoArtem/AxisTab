<Window x:Class="TSODD.Forms.SelectionFormBlocks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSODD.Forms"
        mc:Ignorable="d"
        Title=" " Topmost="True" WindowStyle="SingleBorderWindow" Height="150" Width="295" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"></ColumnDefinition>
            <ColumnDefinition Width="155"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label x:Name="lb_signsType" Content="Типоразмер знака:" Grid.Row="0" Width="122" ></Label>
        <Label x:Name="lb_signsExistence" Content="Наличие знака:" Grid.Row="1" Width="122" ></Label>
        <Label x:Name="lb_marksMaterial" Content="Материал разметки:" Grid.Row="2" Width="122" ></Label>
        <Label x:Name="lb_marksExistence" Content="Наличие разметки:" Grid.Row="3" Width="122" ></Label>

        <ComboBox  x:Name="cb_signsType" Grid.Row="0" Grid.Column="1" Width="150" Height="22" HorizontalContentAlignment="Center" SelectionChanged="cb_signsType_SelectionChanged" ></ComboBox>
        <TextBlock x:Name="tb_signsType" Text="*РАЗЛИЧНЫЕ*" Width="75" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="0,0,10,0"/>

        <ComboBox  x:Name="cb_signsExistence" Grid.Row="1" Grid.Column="1" Width="150" Height="22" HorizontalContentAlignment="Center" SelectionChanged ="cb_signsExistence_SelectionChanged" ></ComboBox>
        <TextBlock x:Name="tb_signsExistence" Text="*РАЗЛИЧНЫЕ*" Width="80" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="0,0,10,0"/>

        <ComboBox  x:Name="cb_marksMaterial" Grid.Row="2" Grid.Column="1" Width="150" Height="22" HorizontalContentAlignment="Center" SelectionChanged ="cb_marksMaterial_SelectionChanged" ></ComboBox>
        <TextBlock x:Name="tb_marksMaterial" Text="*РАЗЛИЧНЫЕ*" Width="80" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="0,0,10,0"/>

        <ComboBox  x:Name="cb_marksExistence" Grid.Row="3" Grid.Column="1" Width="150" Height="22" HorizontalContentAlignment="Center" SelectionChanged ="cb_marksExistence_SelectionChanged" ></ComboBox>
        <TextBlock x:Name="tb_marksExistence" Text="*РАЗЛИЧНЫЕ*" Width="80" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="0,0,10,0"/>

    </Grid>
</Window>
