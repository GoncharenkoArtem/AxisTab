<Window x:Class="TSODD.forms.LineTypeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSODD.forms"
        mc:Ignorable="d"
        Title="Типы линий разметки" MaxHeight="590" MinHeight="590" Width="430" MaxWidth="430" MinWidth="430" ResizeMode="NoResize">
    <DockPanel>


        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,5,10" >
            <Button x:Name="bt_AddLineType" Content="Добавить" Width="85" Height="22" Margin="0,5,10,0" HorizontalAlignment="Right" Click="ButtonAddLineType_Click" ></Button>
            <Button Content="Закрыть" Width="85" Height="22" Margin="0,5,10,0" HorizontalAlignment="Right" Click="ButtonExit_Click"></Button>
        </StackPanel>


        <TabControl x:Name="TabControl" VerticalAlignment="Top" Margin="0,0,0,0">

            <!--*********************************************************************** ВКЛАДКА ДВОЙНАЯ ЛИНИЯ ******************************************************************-->

            <TabItem x:Name="Tabitem_singleLineType" Header="Одинарная линия">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="200"></RowDefinition>
                        <RowDefinition Height="250"></RowDefinition>

                    </Grid.RowDefinitions>

                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="Имя типа линии:" Margin="5"></TextBlock>
                        <TextBox x:Name="tb_LineTypeNameSingle" Width="100" Height="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <CheckBox x:Name="chb_ForMultiline" Content="Только для двойной линии" VerticalAlignment="Center" Margin="15,0,0,0"></CheckBox>
                    </StackPanel>

                    <GroupBox Header="Паттерн" Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" ></RowDefinition>
                                <RowDefinition Height="30" ></RowDefinition>
                                <RowDefinition Height="30" ></RowDefinition>
                                <RowDefinition Height="30" ></RowDefinition>
                                <RowDefinition Height="30" ></RowDefinition>
                                <RowDefinition Height="30" ></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"></ColumnDefinition>
                                <ColumnDefinition Width="220"></ColumnDefinition>
                                <ColumnDefinition Width="1"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="chb_Continuous" Content="Сплошная линия (continuous)" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"></CheckBox>

                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Добавить штрих, м" VerticalAlignment="Center"></TextBlock>
                                <TextBox x:Name="tb_LineLengt" Width="45" Height="22" Margin="22,0,5,0" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center"></TextBox>
                                <Button x:Name="bt_LineLengt"  Height="20" Width="20" Background="Transparent" BorderBrush="Transparent" Click="bt_LineLengt_Click" >
                                    <Image Source="pack://application:,,,/TSODD;component/images/plus.png"  Width="13" Height="13"></Image >
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Добавить пробел, м" VerticalAlignment="Center"></TextBlock>
                                <TextBox x:Name="tb_SpaceLengt" Width="45" Height="22" Margin="15,0,5,0" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center"></TextBox>
                                <Button x:Name="bt_SpaceLengt"  Height="20" Width="20" Background="Transparent" BorderBrush="Transparent" Click="bt_SpaceLengt_Click" >
                                    <Image Source="pack://application:,,,/TSODD;component/images/plus.png" Width="13" Height="13"></Image >
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Добавить точку" VerticalAlignment="Center"></TextBlock>
                                <Button x:Name="bt_Point"  Height="20" Width="20" Margin="90,0,0,0" Background="Transparent" BorderBrush="Transparent"  Click="bt_Point_Click">
                                    <Image Source="pack://application:,,,/TSODD;component/images/plus.png" Width="13" Height="13"></Image >
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Формула паттерна:" VerticalAlignment="Center"></TextBlock>
                                <TextBox x:Name="tb_Pattern" Width="87" Height="22" Margin="5,0,5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="tb_Pattern_TextChanged"></TextBox>
                            </StackPanel>

                            <Button x:Name="bt_AddPattern" Content="Добавить в таблицу паттернов" Height="22" Width="196" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Click="bt_AddPattern_Click"></Button>

                            <Canvas x:Name="CanvasLineType" Grid.Row="0" Grid.Column="1" Height="20" Width="160" Margin="10,0,20,0"></Canvas>

                            <DataGrid x:Name="gridPattern"
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.RowSpan="5"
                                Margin="5,5,25,3"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                               
                                RowBackground="White"
                              
                                SelectionMode="Extended"
                                SelectionUnit="FullRow"
                                HeadersVisibility="Column"
                                HorizontalScrollBarVisibility="Disabled"
                                BorderBrush="Gray"
 
                                BorderThickness="1.5"
                                CanUserSortColumns="False" 
                                EnableColumnVirtualization="True">

                                <!-- Стили заголовков колонок -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Height" Value="20"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1.5"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <!-- Стили строк -->
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Height" Value="22"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderBrush" Value="Gray"  ></Setter>
                                        <Setter Property="BorderThickness" Value="0,0,0,0"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <!-- Текст -->
                                    <DataGridTemplateColumn Header="Паттерн" Width="3*" IsReadOnly ="True" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Margin="10,0,0,0" VerticalAlignment="Center"></TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Button Delete -->
                                    <DataGridTemplateColumn Header="" Width="1*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button  Margin="15,2,13,2" Background="Transparent" BorderBrush="Transparent">
                                                    <Image Source="pack://application:,,,/TSODD;component/images/delete.png" Width="10" Height="10" ></Image >
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <EventSetter Event="Click" Handler="ButtonDelete_Click"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">

                        <GroupBox Header="Цвет" Width="207">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" ></RowDefinition>
                                    <RowDefinition Height="30" ></RowDefinition>
                                    <RowDefinition Height="30" ></RowDefinition>
                                    <RowDefinition Height="125" ></RowDefinition>
                                </Grid.RowDefinitions>

                                <ListView x:Name="lv_DefaultColors"
                              Grid.Row="0"
                              ScrollViewer.HorizontalScrollBarVisibility ="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility = "Disabled"
                              ScrollViewer.CanContentScroll="False"
                              SelectionChanged="lv_DefaultColors_Selected"
                              Height="35"
                              Width="195"
                              Background="WhiteSmoke">

                                    <ListView.ItemTemplate>
                                        <DataTemplate>

                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Width="22" Height="20" >
                                                <StackPanel.Effect>
                                                    <DropShadowEffect/>
                                                </StackPanel.Effect>

                                                <Border Width="9" Height="18" BorderBrush ="{Binding Color_1}" BorderThickness="0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color ="{Binding Color_1}"/>
                                                    </Border.Background>
                                                </Border>

                                                <Border Width="9" Height="18" BorderBrush ="{Binding Color_2}"  BorderThickness="0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color ="{Binding Color_2}"/>
                                                    </Border.Background>
                                                </Border>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ListView.ItemTemplate>

                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"></StackPanel>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>

                                </ListView>

                                <Button x:Name="bt_ColorsGallery" Grid.Row="1" Content="Открыть палитру цветов" Width="190" Height="22" Click="bt_ColorsGallery_Click"></Button>

                                <Button x:Name="bt_AddColor" Grid.Row="2"  Width="190" Height="22" Click="bt_AddColor_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Добавить в таблицу цвет:" Margin="0,0,10,0"></TextBlock>
                                        <Border x:Name="brd_ColorBorder_1" Width="7" Height="14"></Border>
                                        <Border x:Name="brd_ColorBorder_2" Width="7" Height="14"></Border>
                                    </StackPanel>
                                </Button>


                                <DataGrid   x:Name="gridColor"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="3"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
       
                                        RowBackground="White"
      
                                        SelectionMode="Extended"
                                        SelectionUnit="FullRow"
                                        HeadersVisibility="Column"
                                        HorizontalScrollBarVisibility="Disabled"
                                        BorderBrush="Gray"
 
                                        BorderThickness="1.5"
                                        CanUserSortColumns="False" 
                                        EnableColumnVirtualization="True">

                                    <!-- Стили заголовков колонок -->
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="Height" Value="20"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1.5"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <!-- Стили строк -->
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Height" Value="22"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderBrush" Value="Gray"  ></Setter>
                                            <Setter Property="BorderThickness" Value="0,0,0,0"/>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.Columns>

                                        <!-- Цвет -->
                                        <DataGridTemplateColumn Header="Цвет" Width="3*" IsReadOnly ="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border BorderThickness="1" BorderBrush="Black"  Width="14" Height="14" Margin="10,0,0,0">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Border Width="7" Height="14" BorderThickness="0">
                                                                    <Border.Background>
                                                                        <SolidColorBrush Color ="{Binding Color_1}"/>
                                                                    </Border.Background>
                                                                </Border>
                                                                <Border Width="7" Height="14" BorderThickness="0" Margin="-1,0,-1,0">
                                                                    <Border.Background>
                                                                        <SolidColorBrush Color ="{Binding Color_2}"/>
                                                                    </Border.Background>
                                                                </Border>
                                                            </StackPanel>
                                                        </Border>

                                                        <TextBlock Text="{Binding Text}" Margin=" 10,0,0,0" VerticalAlignment="Center"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!-- Button Delete -->
                                        <DataGridTemplateColumn Header="" Width="1*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  Margin="15,2,13,2" Background="Transparent" BorderBrush="Transparent">
                                                        <Image Source="pack://application:,,,/TSODD;component/images/delete.png" Width="10" Height="10"></Image >
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <EventSetter Event="Click" Handler="ButtonDelete_Click"/>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Толщина"  Width="200">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="70" ></RowDefinition>
                                    <RowDefinition Height="30" ></RowDefinition>
                                    <RowDefinition Height="125" ></RowDefinition>
                                </Grid.RowDefinitions>


                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
                                    <TextBlock Text=" Толщина, м:" VerticalAlignment="Center" ></TextBlock>
                                    <TextBox x:Name="tb_Thickness" Height="22" Width="40" Margin="15,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                                </StackPanel>

                                <Button x:Name="bt_AddThickness" Content="Добавить толщину в таблицу" Grid.Row="1" Height="22" Width="180" VerticalAlignment="Center" Click="bt_addThickness_Click"></Button>

                                <DataGrid x:Name="gridThickness"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="4,4,4,3"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                               
                                RowBackground="White"
                              
                                SelectionMode="Extended"
                                SelectionUnit="FullRow"
                                HeadersVisibility="Column"
                                HorizontalScrollBarVisibility="Disabled"
                                BorderBrush="Gray"
 
                                BorderThickness="1.5"
                                CanUserSortColumns="False" 
                                EnableColumnVirtualization="True">

                                    <!-- Стили заголовков колонок -->
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="Height" Value="20"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1.5"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <!-- Стили строк -->
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Height" Value="22"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderBrush" Value="Gray"  ></Setter>
                                            <Setter Property="BorderThickness" Value="0,0,0,0"/>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.Columns>
                                        <!-- Текст -->
                                        <DataGridTemplateColumn Header="Толщина" Width="3*" IsReadOnly ="True" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" Margin="10,0,0,0" VerticalAlignment="Center"></TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!-- Button Delete -->
                                        <DataGridTemplateColumn Header="" Width="1*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  Margin="14,2,12,2" Name="thickness" Background="Transparent" BorderBrush="Transparent">
                                                        <Image Source="pack://application:,,,/TSODD;component/images/delete.png" Width="10" Height="10" ></Image >
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <EventSetter Event="Click" Handler="ButtonDelete_Click"/>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>


                            </Grid>
                        </GroupBox>
                    </StackPanel>


                </Grid>
            </TabItem>

            <!--*********************************************************************** ВКЛАДКА ДВОЙНАЯ ЛИНИЯ ******************************************************************-->

            <TabItem x:Name="Tabitem_multiLineType" Header="Двойная линия">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="Имя двойной линии:" Margin="5"></TextBlock>
                        <TextBox x:Name="tb_LineTypeNameMulti" Width="80" Height="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="36,0,0,0"></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Первая одинарная линия:" VerticalAlignment="Center" Margin="5"></TextBlock>
                        <ComboBox x:Name="cb_firstLineType" Text="sdf"  Width="80" Height="22" Margin="8,0,0,0" SelectionChanged="cb_LineType_SelectionChanged"></ComboBox>
                        <TextBlock x:Name="tb_firstLtIsForMultiline" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10,5,5,5"></TextBlock>
                    </StackPanel>

                    <GroupBox Header="Характеристики первой одинарной линии" Grid.Row="2" Width="310" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"></ColumnDefinition>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Набор паттернов:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="5"></TextBlock>

                            <ItemsControl x:Name="ic_firstLtPatterns" 
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      VerticalAlignment="Center">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Margin="1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Набор цветов:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"></TextBlock>
                            <ItemsControl  x:Name="ic_firstLtColors" 
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       VerticalAlignment="Center">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Width="22" Height="20" >
                                            <StackPanel.Effect>
                                                <DropShadowEffect />
                                            </StackPanel.Effect>

                                            <Border Width="7" Height="14" BorderBrush ="{Binding Color_1}"  BorderThickness="0">

                                                <Border.Background>
                                                    <SolidColorBrush Color ="{Binding Color_1}"/>
                                                </Border.Background>
                                            </Border>

                                            <Border Width="7" Height="14" BorderBrush ="{Binding Color_2}"  BorderThickness="0">
                                                <Border.Background>
                                                    <SolidColorBrush Color ="{Binding Color_2}"/>
                                                </Border.Background>
                                            </Border>

                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <TextBlock Text="Набор толщин:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"></TextBlock>
                            <TextBlock x:Name="tb_firstLtThickness" Grid.Row="2"  Grid.Column="1" VerticalAlignment="Center" Margin="5"></TextBlock>
                        </Grid>
                    </GroupBox>

                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock Text="Вторая одинарная линия:" VerticalAlignment="Center" Margin="5"></TextBlock>
                        <ComboBox x:Name="cb_secondLineType" Text="sdf"  Width="80" Height="22" Margin="8,0,0,0" SelectionChanged="cb_LineType_SelectionChanged"></ComboBox>
                        <TextBlock x:Name="tb_secondLtIsForMultiline" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10,5,5,5"></TextBlock>
                    </StackPanel>


                    <GroupBox Header="Характеристики второй одинарной линии" Grid.Row="4" Width="310" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"></ColumnDefinition>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Набор паттернов:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="5"></TextBlock>

                            <ItemsControl x:Name="ic_secondLtPatterns" 
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      VerticalAlignment="Center">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Margin="1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Набор цветов:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"></TextBlock>
                            <ItemsControl  x:Name="ic_secondLtColors" 
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       VerticalAlignment="Center">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Width="22" Height="20" >
                                            <StackPanel.Effect>
                                                <DropShadowEffect />
                                            </StackPanel.Effect>

                                            <Border Width="7" Height="14" BorderBrush ="{Binding Color_1}"  BorderThickness="0">

                                                <Border.Background>
                                                    <SolidColorBrush Color ="{Binding Color_1}"/>
                                                </Border.Background>
                                            </Border>

                                            <Border Width="7" Height="14" BorderBrush ="{Binding Color_2}"  BorderThickness="0">
                                                <Border.Background>
                                                    <SolidColorBrush Color ="{Binding Color_2}"/>
                                                </Border.Background>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <TextBlock Text="Набор толщин:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"></TextBlock>
                            <TextBlock x:Name="tb_secondLtThickness" Grid.Row="2"  Grid.Column="1" VerticalAlignment="Center" Margin="5"></TextBlock>

                        </Grid>
                    </GroupBox>



                    <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="5">
                        <StackPanel Orientation="Vertical"  Width="220">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text=" Расстояние между линиями, м:" VerticalAlignment="Center"  ></TextBlock>
                                <TextBox x:Name="tb_Offset" Height="22" Width="40" Margin="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <Button x:Name="bt_AddOffset" Content="Добавить расстояние в таблицу" Height="22" Width="220" VerticalAlignment="Center"
                            HorizontalAlignment="Center" Margin="0,5,0,0" Click="bt_addOffset_Click"></Button>
                        </StackPanel>


                        <DataGrid   x:Name="gridOffset"
                            Margin="10,0,4,3"
                            AutoGenerateColumns="False"
