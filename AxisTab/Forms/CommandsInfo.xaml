<Window x:Class="AxisTab.CommandsInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxisTab"
        mc:Ignorable="d"
        Title="Пользовательские команды" Height="305" Width="800">
    <Grid>

        <DataGrid x:Name="grid_commands"
                                      Grid.Row="5"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"

                                      HeadersVisibility="Column"
                                      HorizontalScrollBarVisibility="Disabled"
                                      BorderBrush="Black"
                                      
                                      BorderThickness="1.5"
                                      Margin="0,10,0,0"
                                      CanUserSortColumns="False" 
                                      EnableColumnVirtualization="True"
                        
                                      MouseDoubleClick="grid_commands_MouseDoubleClick">

            <!-- Стили заголовков колонок -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <!--<Setter Property="FontWeight" Value="Bold"/>-->
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1.5"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>


            <DataGrid.Columns>

                <!-- команда -->
                <DataGridTemplateColumn Header="Команда" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding EngName}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Text="{Binding RusName}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- описание -->
                <DataGridTemplateColumn Header="Описание" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="10,0,0,0"></TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- картинка -->
                <DataGridTemplateColumn Header="Кнопка" Width="0.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageSource}" Width="{Binding ImageSize}" Height="{Binding ImageSize}"></Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Height" Value="37"></Setter>
                            <Setter Property="Background" Value="Gray"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTemplateColumn.CellStyle>



                </DataGridTemplateColumn>

            </DataGrid.Columns>


            <DataGrid.ItemsSource>
                <x:Array Type="local:CommandsInfoData">
                    <local:CommandsInfoData EngName="IA_NEW_AXIS" RusName="IA_НОВАЯ_ОСЬ" Description="Создать новую ось" ImageSource="pack://application:,,,/AxisTab;component/images/axis_new.png" ImageSize="28"></local:CommandsInfoData>
                    <local:CommandsInfoData EngName="IA_SET_AXIS_NAME" RusName="IA_ПЕРЕИМЕНОВАТЬ_ОСЬ" Description="Переименовать существующую ось" ImageSource="pack://application:,,,/AxisTAb;component/images/axis_name.png" ImageSize="18" ></local:CommandsInfoData>
                    <local:CommandsInfoData EngName="IA_SET_AXIS_START_POINT" RusName="IA_СТАРТОВАЯ_ТОЧКА_ОСИ" Description="Назначить точку начала оси от которой будет считаться пикет" ImageSource="pack://application:,,,/AxisTAb;component/images/axis_startPoint.png" ImageSize="18" ></local:CommandsInfoData>
                    <local:CommandsInfoData EngName="IA_SET_PK" RusName="IA_НАЗНАЧИТЬ_ПК" Description="Отстроить засечку на оси, соответствующую указанному пикету" ImageSource="pack://application:,,,/AxisTAb;component/images/axis_setPK.png" ImageSize="28" ></local:CommandsInfoData>
                    <local:CommandsInfoData EngName="IA_GET_PK" RusName="IA_ПОЛУЧИТЬ_ПК" Description="Получить значение пикета оси в указанной точке" ImageSource="pack://application:,,,/AxisTAb;component/images/axis_getPK.png" ImageSize="28" ></local:CommandsInfoData>
                    <local:CommandsInfoData EngName="IA_OPTIONS_AXIS" RusName="IA_НАСТРОЙКИ_ОСИ" Description="Вызвать форму настроек" ImageSource="pack://application:,,,/AxisTAb;component/images/options.png" ImageSize="28" ></local:CommandsInfoData>
                </x:Array>
            </DataGrid.ItemsSource>



        </DataGrid>

    </Grid>
</Window>