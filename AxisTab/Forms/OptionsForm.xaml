<Window x:Class="AxisTab.OptionsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxisTab"
        mc:Ignorable="d"
        Title="Настройки" Height="305" Width="370">
    <Grid>

        <StackPanel Orientation="Vertical" Margin="0,5,0,0">

            <GroupBox Header="Пикеты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230" ></ColumnDefinition>
                        <ColumnDefinition Width="110" ></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Длина засечки пикета, м:" VerticalAlignment ="Center" ></TextBlock>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PKLineLength, Mode=TwoWay}" Width="40" Height="22" VerticalAlignment ="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Стиль текста пикета:" VerticalAlignment ="Center" ></TextBlock>
                    <ComboBox x:Name="cb_PKTextStyle" Grid.Row="1" Grid.Column="1" Width="110" Height="22" SelectedValue="{Binding PKTextStyle, Mode=TwoWay}" VerticalAlignment ="Center" HorizontalContentAlignment="Center" ></ComboBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Высота текста пикета:" VerticalAlignment ="Center" ></TextBlock>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PKTextHeight, Mode=TwoWay}" Width="40" Height="22" VerticalAlignment ="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></TextBox>
                </Grid>
            </GroupBox>

            <GroupBox Header="Отслеживание бездействия">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230" ></ColumnDefinition>
                        <ColumnDefinition Width="110" ></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="chb_Inactivity" Content="Включить отслеживание бездействия" Grid.Row="0" VerticalAlignment="Center" IsChecked="{Binding Inactivity, Mode=TwoWay}" Click="chb_Inactivity_Click"></CheckBox>
                    
                    <TextBlock  Grid.Row="1" Grid.Column="0" Text="Время интервала сообщений, мин" VerticalAlignment ="Center" ></TextBlock>
                    <TextBox   x:Name="tb_TimeSpan" Grid.Row="1" Grid.Column="1" Text="{Binding InactivityTimeSpan, Mode=TwoWay}" Width="40" Height="22" VerticalAlignment ="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Отслеживаемое время бездействия, мин" VerticalAlignment ="Center" ></TextBlock>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding InactivityFullTime, Mode=TwoWay}" Width="40" Height="22" VerticalAlignment ="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>

                </Grid>
            </GroupBox>



            <Button Grid.Row="0" Width="250" Height="20" Click="Button_Click" Background="Transparent" BorderBrush="Transparent" Margin="0,5,0,0" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Показать пользовательские команды"></TextBlock>
                    <Image Source="pack://application:,,,/AxisTAb;component/images/arrow.png" Margin="10,0,0,0"></Image >
                </StackPanel>
            </Button>


        </StackPanel>

    </Grid>
</Window>
